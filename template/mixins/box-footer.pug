mixin box-footer(title, sub1, sub2, sub3, sub4)
	div(class="flex flex-col gap-[26px] lg:w-[50%] ")
		div(class="uppercase font-[500] text-[16px] leading-[18px] text-color1 tracking-[3px]") #{title}
		div(class="flex flex-col justify-between gap-[19px]")
			a(href="#" class="font-[400] text-[16px] leading-[19px] text-color1/60 capitalize hover:text-[#E76B6E] empty:hidden") #{sub1}
			a(href="#" class="font-[400] text-[16px] leading-[19px] text-color1/60 capitalize hover:text-[#E76B6E] empty:hidden") #{sub2}
			a(href="#" class="font-[400] text-[16px] leading-[19px] text-color1/60 capitalize hover:text-[#E76B6E] empty:hidden") #{sub3}
			a(href="#" class="font-[400] text-[16px] leading-[19px] text-color1/60 capitalize hover:text-[#E76B6E] empty:hidden") #{sub4}